    private void btnActionPerformed(java.awt.event.ActionEvent evt) {                                    

        
        String Pregunta = txt_Q.getText();
        String Respuesta = p.responder(txt_Q.getText());
        
        String Salida = Pregunta + "\n\n" + Respuesta;
        
        permutado = permutado + Salida + "\n\n";
        
        txt_A.setText(permutado);   
        txt_Q.setText("");
    }                                   

